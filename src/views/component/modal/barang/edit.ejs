<% barangs.forEach(barang => { %>
  <div
    class="modal fade"
    id="edit<%= barang.id %>"
    tabindex="-1"
    aria-labelledby="editLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-success" id="editLabel"><i class="bi bi-chevron-right"></i> Edit barang</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form method="post" action="/barang?_method=put" enctype="multipart/form-data">
            <div class="form-floating mb-3">
              <input type="text" class="form-control" id="name" name="name" placeholder=" " value="<%= barang.name %>" required autocomplete="off">
              <label for="name" class="form-label">Nama</label>
            </div>
            <div class="form-floating mb-3">
              <input type="text" class="form-control" id="code" name="code" placeholder=" " value="<%= barang.code %>" required autocomplete="off">
              <label for="code" class="form-label">Kode</label>
            </div>
            <div class="form-floating mb-3">
              <input type="text" class="form-control" id="brand" name="brand" placeholder=" " value="<%= barang.brand %>" required autocomplete="off">
              <label for="brand" class="form-label">Merk</label>
            </div>
            <div class="form mb-3">
              <label for="category" class="form-label">Kategori</label>
              <select class="form-select" name="category" required>
                <% categories.forEach(category => { %>
                  <option
                  <% if (category.name === barang.category) { %>
                   selected
                  <% } %>
                   value="<%= category.name %>"><%= category.name %></option>
                <% }) %>
              </select>
              <% if (!categories.length) { %>
                  <p class="form-text text-danger">
                    *Harap tambahkan kategori terlebih dahulu
                  </p>
              <% } %>
            </div>
            <div class="form mb-3">
              <label for="room" class="form-label">Ruangan</label>
              <select class="form-select" name="room" id="room" required>
                <% ruangans.forEach(ruangan => { %>
                  <option
                  <% if (ruangan.name === barang.room) { %>
                    selected
                   <% } %>
                  value="<%= ruangan.name %>"><%= ruangan.name %></option>
                <% }) %>
              </select>
              <% if (!ruangans.length) { %>
                  <p class="form-text text-danger">
                    *Harap tambahkan ruangan terlebih dahulu
                  </p>
              <% } %>
            </div>
            <div class="form-floating mb-3">
              <input type="number" class="form-control" id="quantity" name="quantity" placeholder=" " value="<%= barang.quantity %>" required autocomplete="off" min="1" max="9999">
              <label for="quantity" class="form-label">Jumlah</label>
            </div>
            <div class="mb-3">
              <label for="file" class="form-label">Foto</label>
              <p class="form-text text-danger">
                *Biarkan kosong jika tidak ingin mengubah foto
              </p>
              <input type="file" class="form-control" id="file" name="file">
              <div id="fileHelp" class="form-text">
                *png, jpeg, jpg, webp
              </div>
            </div>

            <input type="hidden" name="id" value="<%= barang.id %>">
          </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-outline-success" data-bs-dismiss="modal">Batal</button>
                  <button type="submit" class="btn btn-success"><i class="bi bi-pen"></i> Edit</button>
              </div>
          </form>
      </div>
      </div>
    </div>
<% }) %>