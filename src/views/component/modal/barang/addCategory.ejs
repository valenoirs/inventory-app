<div
  class="modal fade"
  id="addCategory"
  tabindex="-1"
  aria-labelledby="addCategoryLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-success" id="addCategoryLabel"><i class="bi bi-chevron-right"></i> Tambah Kategori</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form method="post" action="/category">
            <div class="form-floating mb-3">
              <input type="text" class="form-control" id="name" name="name" placeholder=" " required autocomplete="off">
              <label for="name" class="form-label">Nama</label>
            </div>
        </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-bs-target="#categories" data-bs-toggle="modal">Kembali</button>
                <button type="submit" class="btn btn-outline-success"><i class="bi bi-tags-fill"></i> Simpan</button>
            </div>
        </form>
    </div>
  </div>
</div>
