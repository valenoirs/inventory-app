<div class="container-fluid" data-aos="fade-right">
  <div class="row p-5 justify-content-center">
    <!-- INTRO -->
    <div class="row mb-3 justify-content-center">
      <div class="col-10">
        <h1 class="display-6 mb-3">Rekomendasi</h1>
        <p class="text-muted">
          Berdasarkan hasil perhitungan yang dilakukan oleh sistem dengan batas
          <em>support</em> = 40%, maka didapatkan hasil sebagai berikut:
        </p>
      </div>
    </div>

    <!-- SUPPORT -->
    <div class="row mb-3 justify-content-center">
      <div class="col-10">
        <h4 class="text-success mb-3">
          <i class="bi bi-award-fill fs-5"></i> Supports
        </h4>

        <table class="table table-striped table-hover">
          <thead>
            <tr class="table-dark">
              <th scope="col" width="35px">No</th>
              <th scope="col">Items</th>
              <th scope="col" width="350">Support</th>
            </tr>
          </thead>
          <tbody>
            <% supports.forEach((support, index) => { %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td class="text-start"><%= support.join(", ") %></td>
              <td><%= support.Support.toFixed(2) %>%</td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% if (!supports.length) { %>
        <div class="alert alert-success" role="alert">
          <i class="bi bi-info-circle-fill"></i> Data barang tidak cukup untuk
          mendapatkan hasil <em>support</em> lebih dari 40%.
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
