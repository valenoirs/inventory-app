<%- include('./component/modal/ruangan/delete') %>
<!--  -->
<%- include('./component/modal/ruangan/edit') %>

<div class="container-fluid" data-aos="fade-up" data-aos-duration="750">
  <div class="row justify-content-center py-5">
    <div class="col-8 text-start">
      <h1 class="text-success display-6">
        <%= ruangan.year %> | <%= ruangan.name %>
      </h1>
      <% if (locals.user.role === "ADMIN") { %>

      <div class="mt-4">
        <a
          class="text-decoration-none btn btn-outline-danger text-center"
          type="button"
          data-bs-toggle="modal"
          data-bs-target="#delete"
        >
          <i class="bi bi-trash"></i> Hapus
        </a>
        <a
          class="text-decoration-none btn btn-outline-success text-center"
          type="button"
          data-bs-toggle="modal"
          data-bs-target="#edit"
        >
          <i class="bi bi-pen"></i> Edit
        </a>
      </div>
      <% } %>
      <br />
      <h6 class="text-muted">
        <i class="bi bi-pin-angle-fill"></i> Dinas PU Kabupaten Minahasa
      </h6>
      <br />
      <hr />
      <br />
      <h6 class="mb-3 text-success">
        <i class="bi bi-box-seam"></i> Daftar Barang
      </h6>
      <table class="table table-striped table-hover">
        <thead>
          <tr class="table-dark">
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">Kondisi</th>
            <th scope="col">Merk</th>
            <th scope="col">Kategori</th>
            <th scope="col">Jumlah</th>
          </tr>
        </thead>
        <tbody>
          <% barangs.forEach((barang, index) => { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= barang.name %></td>
            <td><%= barang.code %></td>
            <td><%= barang.brand %></td>
            <td><%= barang.category %></td>
            <td><%= barang.quantity %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
